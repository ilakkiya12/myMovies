{% extends "layout.html.twig" %}
{% set medicamentMenu = true %}

{% block title %}Médicaments{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if medicaments %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom commercial</th>
                    <th>Famille</th>
                </tr>
            </thead>
            {% for medicament in medicaments %}
                <tr>
                    <td><a href="{{ path('medicament', { 'id': medicament.id }) }}">{{ medicament.nomCommercial }}</a></td>
                    <td>{{ medicament.famille.libelle }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun médicament trouvé.</div>
{% endif %}   
{% endblock %}